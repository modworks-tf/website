---
/**
 * Props:
 * - id: string (unique id for this modal)
 * - title: string (modal header title)
 */
const { id = "modal", title = "Info" } = Astro.props;
---

<div class="modal-overlay" data-modal-overlay id={id} aria-hidden="true">
  <div
    class="modal"
    role="dialog"
    aria-modal="true"
    aria-labelledby={`${id}-title`}>
    <div class="modal-header">
      <h2 id={`${id}-title`}>{title}</h2>
      <button class="modal-close" data-modal-close aria-label="Close modal"
        >&times;</button
      >
    </div>
    <div class="modal-body">
      <slot />
    </div>
  </div>
</div>
